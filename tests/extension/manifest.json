{
    "manifest_version": 2,
    "name": "asdf",
    "description": "asdf",
    "version": "1",
    "author": "",
   "browser_action": {
      "default_icon": "icon.png",
      "default_title": "Have a good day",
      "default_popup": "popup.html"
    },
    
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },

   "chrome_url_overrides" : {
     "newtab": "newtab.html"
   },
    "permissions": [
        "activeTab"
      ],
    "externally_connectable": {
      "matches": [
        "*://localhost/*"
      ]
    }
   }